{
  "expo": {
    "name": "Привет, Сосед!",
    "description": "",
    "slug": "App_PrivetSosed",
    "platforms": [
      "ios",
      "android"
    ],
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/favicon.png",
    "scheme": "privetsosed",
    "splash": {
      "image": "./assets/images/static_logo.png",
      "resizeMode": "contain",
      "backgroundColor": "#f4f7fb"
    },
    "primaryColor": "#E3712A",
    "updates": {
      "fallbackToCacheTimeout": 0
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "requireFullScreen": true,
      "bundleIdentifier": "ru.privetsosed.app",
      "usesIcloudStorage": true,
      "usesAppleSignIn": true,
      "infoPlist": {
        "CFBundleDevelopmentRegion": "ru"
      }
    },
    "android": {
      "package": "ru.privetsosed.app",
      "versionCode": 10000,
      "permissions": [
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "CAMERA"
      ]
    }
  }
}
